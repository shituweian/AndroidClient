<resources xmlns:tools="http://schemas.android.com/tools">
    <!-- Base application theme. -->
    <style name="Theme.AndroidClient" parent="Theme.MaterialComponents.Light.NoActionBar">
        <!-- Primary brand color. -->
        <item name="colorPrimary">@color/web_blue</item>
        <item name="colorPrimaryDark">@color/teal_700</item>
        <item name="colorPrimaryVariant">@color/web_blue</item>
        <item name="colorOnPrimary">@color/waited_gray</item>
        <!-- Secondary brand color. -->
        <item name="colorSecondary">@color/teal_200</item>
        <item name="colorSecondaryVariant">@color/teal_700</item>
        <item name="colorOnSecondary">@color/black</item>
        <!-- Status bar color. -->
        <item name="android:statusBarColor" tools:targetApi="l">?attr/colorPrimaryVariant</item>
        <item name="android:typeface">monospace</item>
        <!-- Customize your theme here. -->
    </style>
    <style name="footButton" parent="Theme.AppCompat.Light">
        <item name = "colorPrimary">@color/white</item>
        <item name="android:textColorSecondary">@android:color/black</item>
    </style>
