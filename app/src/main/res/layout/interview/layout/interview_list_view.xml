<?xml version="1.0" encoding="utf-8"?>
<com.google.android.material.card.MaterialCardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginTop="3dp"
    android:clickable="true"
    android:foreground="?android:attr/selectableItemBackgroundBorderless"
    app:cardCornerRadius="3dp"
    app:cardElevation="3dp"
    app:cardUseCompatPadding="true"
    app:contentPaddingLeft="3dp"
    app:contentPaddingRight="3dp"
    app:rippleColor="@color/teal_700"
    app:strokeColor="@color/waited_gray"
    app:strokeWidth="0dp">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="10dp"
        android:orientation="vertical">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            >

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:layout_alignParentLeft="true"
            >

            <cn.carbs.android.avatarimageview.library.AvatarImageView
                android:id="@+id/interview_avatar"
                android:layout_width="40dp"
                android:layout_height="40dp"
                android:padding="1dp"
                android:layout_marginLeft="12dp"
                app:aiv_BoarderWidth="2dp"
                app:aiv_ShowBoarder="true"
                app:aiv_TextSizeRatio="0.4" />

            <me.codeboy.android.aligntextview.AlignTextView
                android:id="@+id/interview_provider_name"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentStart="true"
                android:layout_marginLeft="10dp"
                android:layout_marginTop="11dp"
                android:text="provider name"
                android:textSize="12sp"
                app:align="left" />

        </LinearLayout>

            <me.codeboy.android.aligntextview.AlignTextView
                android:id="@+id/interview_uploadtime"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentRight="true"
                android:layout_marginLeft="10dp"
                android:layout_marginTop="11dp"
                android:layout_marginRight="10dp"
                android:layout_marginBottom="10dp"
                android:text="uploadtime"
                android:textColor="@color/time_color"
                android:textSize="12sp"
                app:align="right" />

        </RelativeLayout>

        <me.codeboy.android.aligntextview.AlignTextView
            android:id="@+id/interview_title"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="10dp"
            android:layout_marginTop="13dp"
            android:layout_marginRight="10dp"
            android:layout_marginBottom="5dp"
            android:text="title"
            android:textColor="@color/black"
            android:textSize="16sp"
            android:textStyle="bold"
            app:align="left" />


        <me.codeboy.android.aligntextview.AlignTextView
            android:id="@+id/interview_description"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="10dp"
            android:layout_marginTop="5dp"
            android:layout_marginRight="10dp"
            android:layout_marginBottom="10dp"
            android:text="description"
            android:textSize="16sp"
            app:align="left" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="5dp"
            >

            <me.codeboy.android.aligntextview.AlignTextView
                android:id="@+id/interview_company"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:text="company"
                android:textSize="14sp"
                app:align="center" />

            <me.codeboy.android.aligntextview.AlignTextView
                android:id="@+id/interview_position"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:text="position"
                android:textSize="14sp"
                app:align="center"  />

            <me.codeboy.android.aligntextview.AlignTextView
                android:id="@+id/interview_location"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:text="location"
                android:textSize="14sp"
                app:align="center"  />

            <me.codeboy.android.aligntextview.AlignTextView
                android:id="@+id/interview_question_number"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:text="question"
                android:textSize="14sp"
                app:align="center" />


        </LinearLayout>

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="-5dp"
            android:layout_marginBottom="10dp">


            <me.codeboy.android.aligntextview.AlignTextView
                android:id="@+id/interview_level"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentStart="true"
                android:layout_marginLeft="24dp"
                android:text="pass"
                android:textSize="18sp"
                app:align="center" />

            <com.sackcentury.shinebuttonlib.ShineButton
                android:id="@+id/interview_list_like"
                android:layout_width="25dp"
                android:layout_height="25dp"
                android:layout_alignParentEnd="true"
                android:layout_marginRight="15dp"
                android:layout_marginBottom="7dp"
                android:src="@android:color/darker_gray"
                app:allow_random_color="false"
                app:btn_color="@android:color/darker_gray"
                app:btn_fill_color="@android:color/holo_red_light"
                app:siShape="@raw/heart" />

        </RelativeLayout>

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content">




        </RelativeLayout>


    </LinearLayout>

</com.google.android.material.card.MaterialCardView>