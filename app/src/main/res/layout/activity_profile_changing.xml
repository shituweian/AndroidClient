<?xml version="1.0" encoding="utf-8"?>
<androidx.core.widget.NestedScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:background="@color/background"
    tools:context=".ui.informations.InformationFragment">
    <androidx.cardview.widget.CardView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:cardUseCompatPadding="true"
        app:cardCornerRadius="5dp"
        app:cardElevation="3dp"
        android:layout_marginLeft="10dp"
        android:layout_marginRight="10dp"
        android:layout_marginTop="16dp"
        android:layout_marginBottom="16dp">
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="25dp"
        android:layout_marginRight="25dp"
        android:layout_marginTop="10dp">

        <ImageButton
            android:layout_width="90dp"
            android:layout_height="90dp"
            android:layout_centerHorizontal="true"
            android:src="@drawable/ic_notifications_black_24dp"
            />


    </RelativeLayout>


    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="45dp"
        android:layout_marginLeft="25dp"
        android:layout_marginRight="25dp"
        android:layout_marginTop="40dp">

        <TextView
            android:layout_width="170dp"
            android:layout_height="match_parent"
            android:layout_alignParentLeft="true"
            android:layout_alignParentBottom="true"
            android:gravity="center_vertical"
            android:text="SCHOOL"
            android:textSize="16sp" />

        <EditText
            android:id="@+id/profile_school"
            android:layout_width="180dp"
            android:layout_height="match_parent"
            android:layout_centerHorizontal="true"
            android:layout_marginLeft="20dp"
            android:text="HKU"
            android:autoSizeMinTextSize="8dp"
            android:autoSizeMaxTextSize="20dp"
            android:autoSizePresetSizes="16dp"
            android:gravity="center"
            android:textSize="16sp"/>

        <Button
            android:layout_width="45dp"
            android:layout_height="45dp"
            android:layout_alignParentRight="true"
            android:layout_marginRight="15dp"
            android:textColor="#ffffff"
            android:background="@drawable/hint_superscript_red"
            />


    </RelativeLayout>

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="45dp"
            android:layout_marginLeft="25dp"
            android:layout_marginRight="25dp"
            android:layout_marginTop="30dp">

            <TextView
                android:layout_width="170dp"
                android:layout_height="match_parent"
                android:layout_alignParentLeft="true"
                android:layout_alignParentBottom="true"
                android:gravity="center_vertical"
                android:text="GRADUATE TIME"
                android:textSize="16sp" />



            <Button
                android:id="@+id/profile_graduate_time"
                android:layout_width="140dp"
                android:layout_height="45dp"
                android:layout_alignParentRight="true"
                android:layout_marginRight="15dp"
                android:background="@drawable/btn_bg"
                android:textColor="#ffffff"
                android:text="graduate time"
                />


        </RelativeLayout>


        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="45dp"
            android:layout_marginLeft="5dp"
            android:layout_marginRight="25dp"
            android:layout_marginTop="30dp">


            <RadioGroup
                android:id="@+id/radioGroup_gender"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:gravity="center"
                android:orientation="horizontal">

                <RadioButton
                    android:id="@+id/radioButton_student"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center_horizontal"
                    android:layout_marginRight="10dp"
                    android:checked="true"
                    android:text="student"
                    android:textSize="16sp" />

                <RadioButton
                    android:id="@+id/radioButton_employee"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center_horizontal"
                    android:layout_marginRight="10dp"
                    android:checked="false"
                    android:text="employee"
                    android:textSize="16sp" />

                <RadioButton
                    android:id="@+id/radioButton_HR"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center_horizontal"
                    android:checked="false"
                    android:text="HR"
                    android:textSize="16sp" />

            </RadioGroup>

        </RelativeLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="120dp"
            android:layout_marginLeft="25dp"
            android:layout_marginRight="25dp"
            android:layout_marginTop="10dp"
            android:orientation="vertical">

        <RelativeLayout
            android:id="@+id/student_state"
            android:layout_width="match_parent"
            android:layout_height="45dp"
            android:visibility="visible">

        </RelativeLayout>



            <LinearLayout
                android:id="@+id/employee_state"
                android:layout_width="match_parent"
                android:layout_height="120dp"
                android:visibility="gone"
                android:orientation="vertical">


            <RelativeLayout
                android:layout_width="match_parent"
                android:id="@+id/rl_1"
                android:layout_height="45dp">
                <TextView
                    android:layout_width="170dp"
                    android:layout_height="match_parent"
                    android:layout_alignParentLeft="true"
                    android:layout_alignParentBottom="true"
                    android:gravity="center_vertical"
                    android:text="COMPANY"
                    android:textSize="16sp" />

                <EditText
                    android:id="@+id/profile_company"
                    android:layout_width="180dp"
                    android:layout_height="match_parent"
                    android:layout_alignParentRight="true"
                    android:layout_marginLeft="20dp"
                    android:text="HKU"
                    android:autoSizeMinTextSize="8dp"
                    android:autoSizeMaxTextSize="20dp"
                    android:autoSizePresetSizes="16dp"
                    android:gravity="center"
                    android:textSize="16sp"/>

            </RelativeLayout>

                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="45dp"
                    android:layout_marginTop="10dp">

                    <TextView
                        android:layout_width="170dp"
                        android:layout_height="match_parent"
                        android:layout_alignParentLeft="true"
                        android:layout_alignParentBottom="true"
                        android:gravity="center_vertical"
                        android:text="YoE"
                        android:textSize="16sp" />

                    <EditText
                        android:id="@+id/profile_YoE"
                        android:layout_width="180dp"
                        android:layout_height="match_parent"
                        android:layout_alignParentRight="true"
                        android:layout_marginLeft="20dp"
                        android:autoSizeMaxTextSize="20dp"
                        android:autoSizeMinTextSize="8dp"
                        android:autoSizePresetSizes="16dp"
                        android:gravity="center"
                        android:text="Software Engineer"
                        android:textSize="16sp" />

                </RelativeLayout>


            </LinearLayout>

            <RelativeLayout
                android:id="@+id/hr_state"
                android:layout_width="match_parent"
                android:layout_height="45dp"
                android:visibility="gone">



            </RelativeLayout>

        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="100dp"
            android:layout_marginLeft="25dp"
            android:layout_marginRight="25dp"
            android:layout_marginTop="30dp"
            android:orientation="vertical">

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="45dp">
                <TextView
                    android:layout_width="170dp"
                    android:layout_height="match_parent"
                    android:layout_alignParentLeft="true"
                    android:layout_alignParentBottom="true"
                    android:gravity="center_vertical"
                    android:text="EMAIL"
                    android:textSize="16sp" />

                <EditText
                    android:id="@+id/profile_email"
                    android:layout_width="180dp"
                    android:layout_height="match_parent"
                    android:layout_alignParentRight="true"
                    android:layout_marginLeft="20dp"
                    android:text="1258264684@qq.com"
                    android:autoSizeMinTextSize="8dp"
                    android:autoSizeMaxTextSize="20dp"
                    android:autoSizePresetSizes="16dp"
                    android:gravity="center"
                    android:textSize="16sp"/>

            </RelativeLayout>

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="45dp"
                android:layout_marginTop="10dp">

                <TextView
                    android:layout_width="170dp"
                    android:layout_height="match_parent"
                    android:layout_alignParentLeft="true"
                    android:layout_alignParentBottom="true"
                    android:gravity="center_vertical"
                    android:text="USER NAME"
                    android:textSize="16sp" />

                <EditText
                    android:id="@+id/profile_username"
                    android:layout_width="180dp"
                    android:layout_height="match_parent"
                    android:layout_alignParentRight="true"
                    android:layout_marginLeft="20dp"
                    android:autoSizeMaxTextSize="20dp"
                    android:autoSizeMinTextSize="8dp"
                    android:autoSizePresetSizes="16dp"
                    android:gravity="center"
                    android:text="0611"
                    android:textSize="16sp" />

            </RelativeLayout>

        </LinearLayout>

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="25dp"
            android:layout_marginRight="25dp"
            android:layout_marginTop="30dp"
            android:layout_marginBottom="20dp">

            <Button
                android:id="@+id/profile_confirm"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@drawable/btn_bg"
                android:text="confirm"
                android:textColor="#ffffff"
                android:textSize="16sp"/>

        </RelativeLayout>

    </LinearLayout>
    </androidx.cardview.widget.CardView>

</androidx.core.widget.NestedScrollView>