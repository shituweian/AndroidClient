<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:background="@color/background">

    <androidx.core.widget.NestedScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_centerInParent="true">

        <androidx.cardview.widget.CardView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_centerInParent="true"
            android:layout_marginLeft="10dp"
            android:layout_marginTop="10dp"
            android:layout_marginRight="10dp"
            android:layout_marginBottom="10dp"
            app:cardCornerRadius="5dp"
            app:cardElevation="3dp"
            app:cardUseCompatPadding="true">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical">

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="12dp"
                android:layout_marginTop="10dp"
                android:layout_marginBottom="-10dp">

                <TextView
                    android:id="@+id/job_activity_company"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="COMPANY"
                    android:textColor="@color/white_blue"
                    android:textSize="35sp"
                    android:layout_alignParentStart="true"
                    />
                <RelativeLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentEnd="true"
                    android:layout_marginRight="12dp"
                    >

                    <LinearLayout
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_centerInParent="true"
                        android:orientation="vertical">
                        <me.codeboy.android.aligntextview.AlignTextView
                            android:id="@+id/job_activity_upload_time"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="uploadtime"
                            android:textSize="14sp"
                            android:textColor="@color/time_color"
                            app:align="left"
                            />
                        <me.codeboy.android.aligntextview.AlignTextView
                            android:id="@+id/job_activity_expire_time"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginTop="5dp"
                            android:text="expire_time"
                            android:textSize="14sp"
                            android:textColor="@color/time_color"
                            app:align="left"
                            />

                    </LinearLayout>

                </RelativeLayout>

            </RelativeLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:layout_marginTop="20dp"
                android:layout_marginLeft="0dp"
                android:layout_marginRight="0dp"
                android:layout_marginBottom="0dp"
                >

                <br.tiagohm.markdownview.MarkdownView
                    android:id="@+id/job_activity_md"
                    app:escapeHtml="false"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"/>

            </LinearLayout>

                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="12dp"
                    android:layout_marginRight="12dp"
                    android:layout_marginTop="-15dp"
                    android:layout_marginBottom="15dp"
                    >

                    <LinearLayout
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_alignParentLeft="true"
                        android:orientation="vertical"
                        >

                        <me.codeboy.android.aligntextview.AlignTextView
                            android:id="@+id/job_activity_position"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginTop="4dp"
                            android:text="Position:"
                            android:textStyle="bold"
                            android:textSize="14sp"/>

                        <me.codeboy.android.aligntextview.AlignTextView
                            android:id="@+id/job_activity_salary"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginTop="4dp"
                            android:text="Salary:"
                            android:textStyle="bold"
                            android:textSize="14sp"/>

                        <me.codeboy.android.aligntextview.AlignTextView
                            android:id="@+id/job_activity_hr"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginTop="4dp"
                            android:text="Hr:"
                            android:textStyle="bold"
                            android:textSize="14sp"/>



                    </LinearLayout>

                    <RelativeLayout
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_alignParentEnd="true"
                        android:layout_marginTop="26dp"
                        >

                        <TextView
                            android:id="@+id/job_activity_location"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="HONG KONG"
                            android:textSize="38sp"
                            android:textColor="@color/web_blue"
                            android:layout_centerInParent="true"
                            />


                    </RelativeLayout>

                </RelativeLayout>

            </LinearLayout>

        </androidx.cardview.widget.CardView>


    </androidx.core.widget.NestedScrollView>

</RelativeLayout>