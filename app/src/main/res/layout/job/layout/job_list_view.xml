<?xml version="1.0" encoding="utf-8"?>
<com.google.android.material.card.MaterialCardView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_marginTop="3dp"
    android:clickable="true"
    android:foreground="?android:attr/selectableItemBackgroundBorderless"
    app:cardCornerRadius="3dp"
    app:cardElevation="3dp"
    app:cardUseCompatPadding="true"
    app:contentPaddingLeft="3dp"
    app:contentPaddingRight="3dp"
    app:rippleColor="@color/teal_700"
    app:strokeColor="@color/waited_gray"
    app:strokeWidth="0dp">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="10dp"
        android:orientation="vertical">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="12dp"
            android:layout_marginTop="10dp"
            android:layout_marginBottom="10dp">

            <TextView
                android:id="@+id/job_company"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="COMPANY"
                android:textColor="@color/white_blue"
                android:textSize="35sp"
                android:layout_alignParentStart="true"
                />
            <RelativeLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentEnd="true"
                android:layout_marginRight="12dp"
                >

                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_centerInParent="true"
                    android:orientation="vertical">
                <me.codeboy.android.aligntextview.AlignTextView
                    android:id="@+id/job_upload_time"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="uploadtime"
                    android:textSize="14sp"
                    android:textColor="@color/time_color"
                    app:align="left"
                    />
                    <me.codeboy.android.aligntextview.AlignTextView
                        android:id="@+id/job_expire_time"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="5dp"
                        android:text="expire_time"
                        android:textSize="14sp"
                        android:textColor="@color/time_color"
                        app:align="left"
                        />

                </LinearLayout>

            </RelativeLayout>

        </RelativeLayout>


        <me.codeboy.android.aligntextview.AlignTextView
            android:id="@+id/job_description"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="12dp"
            android:layout_marginRight="12dp"
            android:text="Tencent AI lab job, mainly require candidates who are good at Machine learning experiences, especially those has paper released in publications or conferences."
            android:textSize="16sp"
            app:align="left"
            />

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="12dp"
            android:layout_marginRight="12dp"
            android:layout_marginTop="10dp"
            android:layout_marginBottom="15dp"
            >

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentLeft="true"
                android:orientation="vertical"
                >

                <me.codeboy.android.aligntextview.AlignTextView
                    android:id="@+id/job_position"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="4dp"
                    android:text="Position:"
                    android:textStyle="bold"
                    android:textSize="14sp"/>

                <me.codeboy.android.aligntextview.AlignTextView
                    android:id="@+id/job_salary"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="4dp"
                    android:text="Salary:"
                    android:textStyle="bold"
                    android:textSize="14sp"/>

                <me.codeboy.android.aligntextview.AlignTextView
                    android:id="@+id/job_hr"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="4dp"
                    android:text="Hr:"
                    android:textStyle="bold"
                    android:textSize="14sp"/>



            </LinearLayout>

            <RelativeLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentEnd="true"
                android:layout_marginTop="26dp"
                >

                <TextView
                    android:id="@+id/job_location"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="HONG KONG"
                    android:textSize="38sp"
                    android:textColor="@color/web_blue"
                    android:layout_centerInParent="true"
                    />


            </RelativeLayout>

        </RelativeLayout>



    </LinearLayout>

</com.google.android.material.card.MaterialCardView>