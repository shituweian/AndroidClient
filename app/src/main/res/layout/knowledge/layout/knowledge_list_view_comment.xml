<?xml version="1.0" encoding="utf-8"?>
<androidx.appcompat.widget.LinearLayoutCompat xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="5dp"
        android:layout_marginTop="18dp"
        android:layout_marginRight="5dp"
        android:layout_marginBottom="12dp">

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentStart="true">

            <cn.carbs.android.avatarimageview.library.AvatarImageView
                android:id="@+id/knowledge_comment_avatar"
                android:layout_width="30dp"
                android:layout_height="30dp"
                android:padding="1dp"
                app:aiv_BoarderWidth="2dp"
                app:aiv_ShowBoarder="true"
                app:aiv_TextSizeRatio="0.4" />

            <me.codeboy.android.aligntextview.AlignTextView
                android:id="@+id/knowledge_comment_name"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="8dp"
                android:layout_marginTop="3dp"
                android:text="Gao Shiwei"
                android:textSize="16sp"
                android:textStyle="bold"
                app:align="left" />

        </LinearLayout>

        <me.codeboy.android.aligntextview.AlignTextView
            android:id="@+id/knowledge_comment_time"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentEnd="true"
            android:layout_marginTop="7dp"
            android:text="time"
            android:textColor="@color/time_color"
            android:textSize="14sp"
            app:align="right" />

    </RelativeLayout>

    <me.codeboy.android.aligntextview.AlignTextView
        android:id="@+id/knowledge_comment_content"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="9dp"
        android:layout_marginTop="12dp"
        android:layout_marginRight="5dp"
        android:layout_marginBottom="12dp"
        android:text="this is the comment content"
        android:textSize="16sp"
        app:align="left" />

    <me.codeboy.android.aligntextview.AlignTextView
        android:id="@+id/knowledge_comment_type"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="5dp"
        android:layout_marginTop="12dp"
        android:layout_marginRight="5dp"
        android:layout_marginBottom="12dp"
        android:text="comment"
        android:textSize="14sp"
        app:align="right" />


</androidx.appcompat.widget.LinearLayoutCompat>