<?xml version="1.0" encoding="utf-8"?>
<androidx.appcompat.widget.LinearLayoutCompat xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical"
    >

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="5dp"
        android:layout_marginRight="5dp"
        android:layout_marginTop="5dp"
        android:layout_marginBottom="12dp"
        >

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentStart="true">

            <cn.carbs.android.avatarimageview.library.AvatarImageView
                android:id="@+id/knowledge_detailed_avatar"
                android:layout_width="40dp"
                android:layout_height="40dp"
                android:padding="1dp"
                app:aiv_BoarderWidth="2dp"
                app:aiv_ShowBoarder="true"
                app:aiv_TextSizeRatio="0.4"/>

        <me.codeboy.android.aligntextview.AlignTextView
            android:id="@+id/knowledge_detailed_name"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Gao Shiwei"
            android:textSize="18sp"
            android:textColor="@color/black"
            android:textStyle="bold"
            android:layout_marginTop="7dp"
            android:layout_marginLeft="15dp"
            app:align="left"
            />

        </LinearLayout>

        <me.codeboy.android.aligntextview.AlignTextView
            android:id="@+id/knowledge_detailed_time"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="7dp"
            android:text="time"
            android:textSize="14sp"
            android:textColor="@color/time_color"
            android:layout_alignParentEnd="true"
            app:align="right"
            />




    </RelativeLayout>

    <!--me.codeboy.android.aligntextview.AlignTextView
        android:id="@+id/knowledge_detailed_question_content"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="5dp"
        android:layout_marginRight="5dp"
        android:layout_marginTop="12dp"
        android:layout_marginBottom="12dp"
        android:text="this is the second test"
        android:textSize="18sp"
        app:align="left"
        /-->

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:layout_marginLeft="-40dp"
        android:layout_marginRight="-40dp"
        android:layout_marginBottom="-40dp"
        >

    <br.tiagohm.markdownview.MarkdownView
        android:id="@+id/knowledge_detailed_question_content"
        app:escapeHtml="true"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"/>

    </LinearLayout>

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="5dp"
        android:layout_marginRight="5dp"
        android:layout_marginTop="12dp"
        android:layout_marginBottom="12dp"
        >

        <me.codeboy.android.aligntextview.AlignTextView
            android:id="@+id/knowledge_detailed_tag"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="tag"
            android:textSize="14sp"
            app:align="right"
            android:layout_toLeftOf="@id/knowledge_detailed_company"
            android:layout_marginRight="15dp"
            />

        <me.codeboy.android.aligntextview.AlignTextView
            android:id="@+id/knowledge_detailed_company"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="company"
            android:textSize="14sp"
            app:align="right"
            android:layout_alignParentEnd="true"
            />



    </RelativeLayout>


</androidx.appcompat.widget.LinearLayoutCompat>