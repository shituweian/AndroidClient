<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="5dp"
        android:layout_marginRight="5dp"
        android:layout_marginTop="12dp"
        android:layout_marginBottom="12dp"
        >

        <me.codeboy.android.aligntextview.AlignTextView
            android:id="@+id/knowledge_detailed_name"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Gao Shiwei"
            android:textSize="18sp"
            android:layout_alignParentStart="true"
            app:align="left"
            />
        <me.codeboy.android.aligntextview.AlignTextView
            android:id="@+id/knowledge_detailed_time"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="time"
            android:textSize="14sp"
            android:layout_alignParentEnd="true"
            app:align="right"
            />




    </RelativeLayout>

    <me.codeboy.android.aligntextview.AlignTextView
        android:id="@+id/knowledge_detailed_question_content"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="5dp"
        android:layout_marginRight="5dp"
        android:layout_marginTop="12dp"
        android:layout_marginBottom="12dp"
        android:text="this is the second test"
        android:textSize="16sp"
        app:align="left"
        />

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="5dp"
        android:layout_marginRight="5dp"
        android:layout_marginTop="12dp"
        android:layout_marginBottom="12dp"
        >

        <me.codeboy.android.aligntextview.AlignTextView
            android:id="@+id/knowledge_detailed_tag"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="tag"
            android:textSize="16sp"
            app:align="right"
            android:layout_toLeftOf="@id/knowledge_detailed_company"
            android:layout_marginRight="15dp"
            />

        <me.codeboy.android.aligntextview.AlignTextView
            android:id="@+id/knowledge_detailed_company"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="company"
            android:textSize="16sp"
            app:align="right"
            android:layout_alignParentEnd="true"
            />



    </RelativeLayout>


</LinearLayout>