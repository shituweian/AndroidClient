<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="5dp"
        android:layout_marginRight="5dp"
        android:layout_marginTop="12dp"
        android:layout_marginBottom="12dp"
        >

        <me.codeboy.android.aligntextview.AlignTextView
            android:id="@+id/knowledge_comment_name"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Gao Shiwei"
            android:textSize="18sp"
            android:layout_alignParentStart="true"
            app:align="left"
            />

        <me.codeboy.android.aligntextview.AlignTextView
            android:id="@+id/knowledge_comment_time"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="time"
            android:textSize="18sp"
            android:layout_alignParentEnd="true"
            app:align="right"
            />

    </RelativeLayout>

    <me.codeboy.android.aligntextview.AlignTextView
        android:id="@+id/knowledge_comment_content"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="5dp"
        android:layout_marginRight="5dp"
        android:layout_marginTop="12dp"
        android:layout_marginBottom="12dp"
        android:text="this is the comment content"
        android:textSize="18sp"
        app:align="left"
        />

    <me.codeboy.android.aligntextview.AlignTextView
        android:id="@+id/knowledge_comment_type"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="5dp"
        android:layout_marginRight="5dp"
        android:layout_marginTop="12dp"
        android:layout_marginBottom="12dp"
        android:text="comment"
        android:textSize="14sp"
        app:align="right"
        />



</LinearLayout>